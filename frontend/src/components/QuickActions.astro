---
// src/components/QuickActions.astro
const actions = [
  { label: 'Nova Cotação', icon: 'fas fa-calculator', href: '/nova-cotacao', color: 'blue' },
  { label: 'Cadastrar Cliente', icon: 'fas fa-user-plus', href: '/cadastrar-cliente', color: 'green' },
  { label: 'Histórico', icon: 'fas fa-history', href: '/historico', color: 'purple' },
  { label: 'Relatórios', icon: 'fas fa-chart-pie', href: '/relatorios', color: 'orange' }
];
---

<div class="actions-card glass-premium">
  <div class="card-header">
    <i class="fas fa-bolt icon-yellow"></i>
    <h3>Ações Rápidas</h3>
  </div>
  
  <div class="actions-grid">
    {actions.map(action => (
      <a href={action.href} class={`action-btn btn-${action.color}`}>
        <div class="icon-circle">
          <i class={action.icon}></i>
        </div>
        <span>{action.label}</span>
      </a>
    ))}
  </div>
</div>

<style>
  .actions-card {
    background: rgba(255, 255, 255, 0.7);
    backdrop-filter: blur(10px);
    border-radius: 20px;
    border: 1px solid rgba(255, 255, 255, 0.8);
    padding: 24px;
    box-shadow: 0 10px 15px -3px rgba(0,0,0,0.03);
    height: 100%;
  }

  .card-header {
    display: flex;
    align-items: center;
    gap: 12px;
    margin-bottom: 30px;
  }

  .card-header i {
    font-size: 1.1rem;
    color: #f59e0b;
  }

  .card-header h3 {
    font-size: 1.1rem;
    font-weight: 800;
    color: var(--text-main);
    margin: 0;
  }

  .actions-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 20px;
  }

  .action-btn {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 20px 10px;
    border-radius: 16px;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    border: 1px solid transparent;
    text-align: center;
    gap: 10px;
    text-decoration: none;
  }

  .action-btn:hover {
    transform: translateY(-4px);
    box-shadow: 0 12px 20px -5px rgba(0,0,0,0.08);
  }

  .icon-circle {
    width: 48px;
    height: 48px;
    border-radius: 14px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.3rem;
    background: white;
    transition: all 0.2s;
    box-shadow: 0 4px 6px -1px rgba(0,0,0,0.05);
  }

  .action-btn span {
    font-weight: 700;
    font-size: 0.85rem;
    line-height: 1.2;
  }

  /* Cores dos Botões com variações suaves */
  .btn-blue { background: #eff6ff; color: #1e40af; }
  .btn-blue .icon-circle { color: #2563eb; }
  .btn-blue:hover { border-color: #bfdbfe; background: #dbeafe; }

  .btn-green { background: #f0fdf4; color: #166534; }
  .btn-green .icon-circle { color: #16a34a; }
  .btn-green:hover { border-color: #bbf7d0; background: #dcfce7; }

  .btn-purple { background: #faf5ff; color: #6b21a8; }
  .btn-purple .icon-circle { color: #9333ea; }
  .btn-purple:hover { border-color: #e9d5ff; background: #f3e8ff; }

  .btn-orange { background: #fff7ed; color: #9a3412; }
  .btn-orange .icon-circle { color: #ea580c; }
  .btn-orange:hover { border-color: #fed7aa; background: #ffedd5; }

  @media (max-width: 1024px) {
    .actions-grid { grid-template-columns: repeat(2, 1fr); }
  }
</style>