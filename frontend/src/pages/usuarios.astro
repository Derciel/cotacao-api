---
import Layout from '../layouts/MainLayout.astro';
---

<Layout title="Usuários & Permissões | Nicopel Cargo">
  <div class="header-section">
    <div class="title-group">
      <h1><i class="fas fa-users-cog"></i> Usuários & Permissões</h1>
      <p>Gerencie quem pode acessar o sistema e quais módulos estão disponíveis para cada perfil.</p>
    </div>
    <button id="btn-new-user" class="btn-primary">
      <i class="fas fa-user-plus"></i> Novo Usuário
    </button>
  </div>

  <div class="users-card glass-card animate-fade-in" id="users-container">
    <div class="loading-state">
      <i class="fas fa-circle-notch fa-spin"></i>
      <span>Sincronizando base de usuários...</span>
    </div>
  </div>

  <!-- Modal Novo/Editar Usuário -->
  <div id="user-modal" class="modal">
    <div class="modal-content glass-premium">
      <div class="modal-header">
        <h2 id="modal-title">Novo Usuário</h2>
        <button class="close-modal">&times;</button>
      </div>
      <form id="user-form">
        <input type="hidden" id="user-id" name="id" />
        
        <div class="modal-body-scroll" id="modal-body-content">
          <!-- O conteúdo será alternado entre o Form e a Visualização via JS -->
          <div id="form-container">
          <div class="form-section ux-square">
            <h3 class="section-title"><i class="fas fa-info-circle"></i> Dados de Acesso</h3>
            <div class="form-group">
              <label for="username">Nome de Usuário</label>
              <input type="text" id="username" name="username" required placeholder="Ex: joao.silva" />
            </div>
            <div class="form-grid-inner">
              <div class="form-group">
                <label for="role">Papel Principal</label>
                <select id="role" name="role" required>
                  <option value="SELLER">Vendedor</option>
                  <option value="ADMIN">Administrador</option>
                </select>
              </div>
              <div class="form-group" id="password-group">
                <label for="password">Senha</label>
                <input type="password" id="password" name="password" placeholder="Mínimo 6 caracteres" />
              </div>
            </div>
            <p id="pw-hint" class="hint-text">Deixe em branco para manter a senha atual ao editar.</p>
          </div>

          <div class="form-section ux-square">
            <h3 class="section-title"><i class="fas fa-shield-alt"></i> Permissões de Acesso (Páginas)</h3>
            <div class="permissions-grid">
              <label class="permission-card">
                <input type="checkbox" name="permissions" value="/"> 
                <div class="perm-card-content">
                  <div class="perm-icon"><i class="fas fa-home"></i></div>
                  <div class="perm-info">
                    <span class="perm-name">Dashboard</span>
                    <span class="perm-desc">Visão geral</span>
                  </div>
                </div>
              </label>
              <label class="permission-card">
                <input type="checkbox" name="permissions" value="/nova-cotacao"> 
                <div class="perm-card-content">
                  <div class="perm-icon"><i class="fas fa-plus-circle"></i></div>
                  <div class="perm-info">
                    <span class="perm-name">Nova Cotação</span>
                    <span class="perm-desc">Criação</span>
                  </div>
                </div>
              </label>
              <label class="permission-card">
                <input type="checkbox" name="permissions" value="/historico"> 
                <div class="perm-card-content">
                  <div class="perm-icon"><i class="fas fa-history"></i></div>
                  <div class="perm-info">
                    <span class="perm-name">Histórico</span>
                    <span class="perm-desc">Consulta</span>
                  </div>
                </div>
              </label>
              <label class="permission-card">
                <input type="checkbox" name="permissions" value="/relatorios"> 
                <div class="perm-card-content">
                  <div class="perm-icon"><i class="fas fa-chart-line"></i></div>
                  <div class="perm-info">
                    <span class="perm-name">Analytics</span>
                    <span class="perm-desc">Estatísticas</span>
                  </div>
                </div>
              </label>
              <label class="permission-card">
                <input type="checkbox" name="permissions" value="/usuarios"> 
                <div class="perm-card-content">
                  <div class="perm-icon"><i class="fas fa-users-cog"></i></div>
                  <div class="perm-info">
                    <span class="perm-name">Usuários</span>
                    <span class="perm-desc">Acessos</span>
                  </div>
                </div>
              </label>
            </div>
          </div>
        </div>
        <div id="view-container" style="display: none;"></div>
      </div>

        <div class="modal-footer">
          <button type="button" class="btn-secondary close-modal">Cancelar</button>
          <button type="submit" class="btn-primary" id="save-user-btn">Salvar Usuário</button>
        </div>
      </form>
    </div>
  </div>

  <script is:inline>
    const usersContainer = document.getElementById('users-container');
    const userModal = document.getElementById('user-modal');
    const userForm = document.getElementById('user-form');
    const btnNewUser = document.getElementById('btn-new-user');
    const closeModalBtns = document.querySelectorAll('.close-modal');
    const modalTitle = document.getElementById('modal-title');
    const pwHint = document.getElementById('pw-hint');
    const formContainer = document.getElementById('form-container');
    const viewContainer = document.getElementById('view-container');
    const modalFooter = userModal.querySelector('.modal-footer');

    // Mapeamento de nomes de permissões
    const PERM_NAMES = { 
      '/': 'Dashboard', 
      '/nova-cotacao': 'Cotação', 
      '/historico': 'Histórico', 
      '/relatorios': 'Analytics', 
      '/usuarios': 'Usuários' 
    };

    async function loadUsers() {
      try {
        const response = await fetch('/api/users', {
           headers: { 'Authorization': `Bearer ${localStorage.getItem('auth_token')}` }
        });
        const users = await response.json();

        if (Array.isArray(users)) {
          renderUsers(users);
        } else {
          usersContainer.innerHTML = '<div class="error-state">Erro ao carregar usuários.</div>';
        }
      } catch (error) {
        usersContainer.innerHTML = '<div class="error-state">Falha na conexão com o servidor.</div>';
      }
    }

    function renderUsers(users) {
      if (users.length === 0) {
        usersContainer.innerHTML = `
          <div class="empty-state">
            <i class="fas fa-user-slash"></i>
            <h3>Nenhum usuário encontrado</h3>
            <p>Comece adicionando um novo colaborador ao sistema.</p>
          </div>
        `;
        return;
      }

      usersContainer.innerHTML = `
        <div class="table-responsive">
          <table class="data-table">
            <thead>
              <tr>
                <th>Usuário</th>
                <th>Papel</th>
                <th>Permissões</th>
                <th class="text-right">Ações</th>
              </tr>
            </thead>
            <tbody>
              ${users.map(user => {
                const permissions = user.permissions || [];
                return `
                <tr>
                  <td>
                    <div class="user-identity">
                      <div class="avatar-circle">${user.username.charAt(0).toUpperCase()}</div>
                      <div class="user-meta">
                        <span class="username">${user.username}</span>
                        <span class="user-id">#${user.id}</span>
                      </div>
                    </div>
                  </td>
                  <td>
                    <span class="role-badge ${user.role.toLowerCase()}">
                      ${user.role === 'ADMIN' ? 'Administrador' : 'Vendedor'}
                    </span>
                  </td>
                  <td>
                    <div class="tags-group">
                      ${permissions.slice(0, 3).map(p => `<span class="tag">${PERM_NAMES[p] || p}</span>`).join('')}
                      ${permissions.length > 3 ? `<span class="tag-more">+${permissions.length - 3}</span>` : ''}
                      ${permissions.length === 0 ? '<span class="tag-none">Mínima</span>' : ''}
                    </div>
                  </td>
                  <td class="text-right">
                    <div class="action-btns">
                      <button class="action-btn view" onclick='window.handleViewUser(${JSON.stringify(user)})' title="Ver Detalhes">
                        <i class="fas fa-eye"></i>
                      </button>
                      <button class="action-btn edit" onclick='window.handleEditUser(${JSON.stringify(user)})' title="Editar">
                        <i class="fas fa-pen"></i>
                      </button>
                    </div>
                  </td>
                </tr>
              `;}).join('')}
            </tbody>
          </table>
        </div>
      `;
    }

    window.handleViewUser = (user) => {
      const perms = (user.permissions || []).map(p => `
        <div class="view-perm-card">
          <i class="fas fa-check-circle"></i>
          <span>${PERM_NAMES[p] || p}</span>
        </div>
      `).join('') || '<p class="no-perms">Sem permissões específicas atribuídas.</p>';
      
      viewContainer.innerHTML = `
        <div class="user-profile-view">
          <div class="profile-header">
            <div class="profile-avatar">${user.username.charAt(0).toUpperCase()}</div>
            <div class="profile-info">
              <h3>${user.username}</h3>
              <span class="role-badge ${user.role.toLowerCase()}">${user.role === 'ADMIN' ? 'Administrador' : 'Vendedor'}</span>
            </div>
          </div>
          
          <div class="profile-details-grid">
            <div class="detail-item">
              <label>ID do Sistema</label>
              <span><code>${user.id}</code></span>
            </div>
            <div class="detail-item">
              <label>Status da Conta</label>
              <span class="status-active"><i class="fas fa-check"></i> Ativo</span>
            </div>
          </div>

          <div class="profile-permissions-section">
            <label>Módulos com Acesso Habilitado</label>
            <div class="view-perms-grid">${perms}</div>
          </div>
        </div>
      `;
      
      modalTitle.textContent = 'Perfil do Usuário';
      formContainer.style.display = 'none';
      viewContainer.style.display = 'block';
      modalFooter.style.display = 'none';
      userModal.style.display = 'flex';
    };

    window.handleEditUser = (user) => openModal(user);

    function openModal(user = null) {
      userForm.reset();
      userForm.querySelectorAll('input[type="checkbox"]').forEach(cb => cb.checked = false);
      
      // Default UI state
      formContainer.style.display = 'block';
      viewContainer.style.display = 'none';
      modalFooter.style.display = 'flex';

      if (user) {
        modalTitle.textContent = 'Configurações de Usuário';
        document.getElementById('user-id').value = user.id;
        document.getElementById('username').value = user.username;
        document.getElementById('role').value = user.role;
        pwHint.style.display = 'block';
        document.getElementById('password').required = false;

        if (user.permissions && Array.isArray(user.permissions)) {
          user.permissions.forEach(p => {
            const cb = userForm.querySelector(`input[value="${p}"]`);
            if (cb) cb.checked = true;
          });
        }
      } else {
        modalTitle.textContent = 'Criar Novo Usuário';
        document.getElementById('user-id').value = '';
        pwHint.style.display = 'none';
        document.getElementById('password').required = true;
        
        ['/', '/nova-cotacao', '/historico'].forEach(p => {
          const cb = userForm.querySelector(`input[value="${p}"]`);
          if (cb) cb.checked = true;
        });
      }
      userModal.style.display = 'flex';
    }

    userForm.onsubmit = async (e) => {
      e.preventDefault();
      const formData = new FormData(userForm);
      const data = {
        id: formData.get('id'),
        username: formData.get('username'),
        role: formData.get('role'),
        permissions: formData.getAll('permissions')
      };
      
      const pwd = formData.get('password');
      if (pwd) data.password = pwd;

      const isEdit = !!data.id;
      if (!data.password && !isEdit) {
         window.showToast('Defina uma senha para o novo usuário', 'error');
         return;
      }

      const btn = document.getElementById('save-user-btn');
      btn.disabled = true;
      btn.innerHTML = '<i class="fas fa-circle-notch fa-spin"></i> Processando...';

      try {
        const response = await fetch(isEdit ? `/api/users/${data.id}` : '/api/users', {
          method: isEdit ? 'PATCH' : 'POST',
          headers: { 
            'Content-Type': 'application/json',
            'Authorization': `Bearer ${localStorage.getItem('auth_token')}`
          },
          body: JSON.stringify(data)
        });

        if (response.ok) {
          window.showToast(`Usuário ${isEdit ? 'atualizado' : 'cadastrado'} com sucesso!`, 'success');
          userModal.style.display = 'none';
          loadUsers();
        } else {
          const err = await response.json();
          window.showToast(err.message || 'Erro ao salvar alterações', 'error');
        }
      } catch (error) {
        window.showToast('Erro de conexão com o servidor', 'error');
      } finally {
        btn.disabled = false;
        btn.textContent = 'Salvar Usuário';
      }
    };

    btnNewUser.onclick = () => openModal();
    closeModalBtns.forEach(btn => btn.onclick = () => userModal.style.display = 'none');
    window.onclick = (e) => { if (e.target === userModal) userModal.style.display = 'none'; };

    loadUsers();
  </script>

  <style>
    .header-section {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 40px;
    }

    .title-group h1 {
      font-size: 2.2rem;
      font-weight: 900;
      color: #0f172a;
      margin-bottom: 8px;
      display: flex;
      align-items: center;
      gap: 15px;
      letter-spacing: -0.025em;
    }

    .title-group h1 i { color: #2563eb; }
    .title-group p { color: #64748b; font-size: 1.1rem; }

    /* Users Card & Table */
    .users-card {
      background: white;
      border-radius: 24px;
      border: 1px solid #e2e8f0;
      box-shadow: 0 10px 15px -3px rgba(0,0,0,0.02), 0 4px 6px -2px rgba(0,0,0,0.01);
      overflow: hidden;
      min-height: 480px;
    }

    .table-responsive { overflow-x: auto; }
    .data-table { width: 100%; border-collapse: separate; border-spacing: 0; }
    
    .data-table th { 
      background: #f8fafc;
      text-align: left; 
      padding: 16px 24px; 
      border-bottom: 1px solid #f1f5f9;
      color: #64748b; 
      font-size: 0.75rem; 
      font-weight: 800;
      text-transform: uppercase; 
      letter-spacing: 0.05em;
    }

    .data-table td { padding: 18px 24px; border-bottom: 1px solid #f8fafc; vertical-align: middle; }
    .data-table tr:last-child td { border-bottom: none; }
    .data-table tr:hover td { background: #fcfdfe; }

    .user-identity { display: flex; align-items: center; gap: 14px; }
    .avatar-circle { 
      width: 42px; height: 42px; background: linear-gradient(135deg, #eff6ff, #dbeafe); 
      color: #2563eb; border-radius: 12px; display: flex; align-items: center; 
      justify-content: center; font-weight: 800; font-size: 1.2rem; 
      border: 1px solid rgba(37, 99, 235, 0.1);
    }
    
    .user-meta { display: flex; flex-direction: column; line-height: 1.3; }
    .username { color: #1e293b; font-weight: 700; font-size: 0.95rem; }
    .user-id { color: #94a3b8; font-size: 0.7rem; font-family: monospace; }

    .role-badge {
      padding: 5px 12px; border-radius: 99px; font-size: 0.7rem; font-weight: 800;
      display: inline-flex; text-transform: uppercase; letter-spacing: 0.02em;
    }
    .role-badge.admin { background: #fee2e2; color: #dc2626; }
    .role-badge.user { background: #e0f2fe; color: #0284c7; }

    .tags-group { display: flex; flex-wrap: wrap; gap: 5px; }
    .tag { background: #f1f5f9; color: #475569; padding: 4px 10px; border-radius: 6px; font-size: 0.7rem; font-weight: 700; border: 1px solid #e2e8f0; }
    .tag-more { background: #f8fafc; color: #94a3b8; padding: 4px 8px; border-radius: 6px; font-size: 0.65rem; font-weight: 700; border: 1px dashed #cbd5e1; }
    .tag-none { color: #cbd5e1; font-style: italic; font-size: 0.8rem; }

    .action-btns { display: flex; gap: 8px; justify-content: flex-end; }
    .action-btn { 
      width: 38px; height: 38px; border-radius: 10px; border: 1px solid #e2e8f0;
      background: white; color: #64748b; cursor: pointer; transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
      display: flex; align-items: center; justify-content: center; font-size: 0.9rem;
    }
    .action-btn.view:hover { color: #2563eb; border-color: #2563eb; background: #eff6ff; transform: translateY(-2px); }
    .action-btn.edit:hover { color: #059669; border-color: #059669; background: #ecfdf5; transform: translateY(-2px); }

    /* Modal Styling */
    .modal {
      position: fixed; inset: 0; background: rgba(15, 23, 42, 0.6); backdrop-filter: blur(8px);
      z-index: 2000; display: none; justify-content: center; align-items: center;
      padding: 20px;
    }
    
    .modal-content {
      background: white; width: 100%; max-width: 640px; 
      border-radius: 28px; box-shadow: 0 25px 50px -12px rgba(0,0,0,0.5);
      display: flex; flex-direction: column; max-height: 90vh;
      border: 1px solid rgba(255,255,255,0.1); overflow: hidden;
    }

    .modal-header { padding: 32px 40px; display: flex; justify-content: space-between; align-items: center; }
    .modal-header h2 { font-size: 1.6rem; font-weight: 900; color: #0f172a; letter-spacing: -0.02em; }
    .close-modal { background: #f1f5f9; border: none; width: 36px; height: 36px; border-radius: 50%; color: #64748b; font-size: 1.2rem; cursor: pointer; display: flex; align-items: center; justify-content: center; transition: 0.2s; }
    .close-modal:hover { background: #e2e8f0; color: #0f172a; transform: rotate(90deg); }

    .modal-body-scroll { padding: 0 40px 40px 40px; overflow-y: auto; flex: 1; scrollbar-width: thin; }
    
    .form-section.ux-square { 
      margin-bottom: 25px; 
      background: #f8fafc; 
      padding: 30px; 
      border-radius: 24px; 
      border: 1.5px solid #e2e8f0; 
      box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.05);
      transition: 0.3s;
    }
    .form-section.ux-square:hover { border-color: #2563eb; }
    
    .section-title { font-size: 0.8rem; font-weight: 900; color: #2563eb; margin-bottom: 25px; display: flex; align-items: center; gap: 10px; text-transform: uppercase; letter-spacing: 0.1em; }

    .form-grid-inner { display: grid; grid-template-columns: 1fr 1fr; gap: 20px; }
    .form-group { display: flex; flex-direction: column; gap: 10px; margin-bottom: 20px; }
    .form-group label { font-weight: 800; color: #334155; font-size: 0.85rem; padding-left: 4px; }
    .form-group input, .form-group select {
      padding: 14px 18px; border-radius: 16px; border: 1.5px solid #e2e8f0; outline: none; transition: 0.2s; font-size: 1rem; color: #0f172a; background: white;
    }
    .form-group input::placeholder { color: #94a3b8; }
    .form-group input:focus, .form-group select:focus { border-color: #2563eb; box-shadow: 0 0 0 4px rgba(37,99,235,0.1); background: white; }
    .hint-text { font-size: 0.75rem; color: #94a3b8; margin-top: -10px; margin-bottom: 10px; padding-left: 4px; }

    /* Permissions Cards Design */
    .permissions-grid { display: grid; grid-template-columns: repeat(auto-fill, minmax(180px, 1fr)); gap: 15px; }
    .permission-card {
      display: flex; align-items: flex-start; gap: 12px; padding: 15px; 
      background: white; border: 1.5px solid #e2e8f0; border-radius: 20px; 
      cursor: pointer; transition: 0.3s; position: relative;
    }
    .permission-card:hover { border-color: #2563eb; transform: translateY(-2px); box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.05); }
    .permission-card input[type="checkbox"] { 
      position: absolute; top: 15px; right: 15px; width: 22px; height: 22px; cursor: pointer; accent-color: #2563eb; margin: 0; 
      z-index: 2;
    }
    
    .perm-card-content { display: flex; align-items: center; gap: 15px; width: 100%; }
    .perm-icon { width: 40px; height: 40px; background: #eff6ff; color: #2563eb; border-radius: 12px; display: flex; align-items: center; justify-content: center; font-size: 1.1rem; }
    .perm-info { display: flex; flex-direction: column; line-height: 1.3; }
    .perm-name { font-weight: 850; color: #1e293b; font-size: 0.95rem; }
    .perm-desc { font-size: 0.7rem; color: #64748b; font-weight: 600; text-transform: uppercase; letter-spacing: 0.5px; }

    .permission-card input[type="checkbox"]:checked + .perm-card-content .perm-icon { background: #2563eb; color: white; }
    .permission-card:has(input[type="checkbox"]:checked) { border-color: #2563eb; background: #f0f7ff; }

    .modal-footer { padding: 32px 40px; border-top: 1px solid #f1f5f9; display: flex; justify-content: flex-end; gap: 16px; background: white; margin-top: auto; }
    .btn-primary { background: linear-gradient(135deg, #2563eb, #1d4ed8); color: white; padding: 16px 40px; border-radius: 18px; border: none; font-weight: 900; font-size: 1rem; cursor: pointer; transition: 0.3s; box-shadow: 0 10px 15px -3px rgba(37, 99, 235, 0.3); }
    .btn-primary:hover { transform: translateY(-3px); box-shadow: 0 15px 25px -5px rgba(37, 99, 235, 0.4); filter: brightness(1.1); }
    .btn-primary:disabled { opacity: 0.7; cursor: not-allowed; transform: none; box-shadow: none; }
    .btn-secondary { background: #f1f5f9; color: #475569; padding: 16px 32px; border-radius: 18px; border: none; font-weight: 800; cursor: pointer; transition: 0.2s; }
    .btn-secondary:hover { background: #e2e8f0; color: #1e293b; }

    /* Profile View Layout */
    .user-profile-view { animation: slideUp 0.4s ease; }
    .profile-header { display: flex; align-items: center; gap: 30px; margin-bottom: 40px; padding: 24px; background: #f8fafc; border-radius: 24px; border: 1px solid #f1f5f9; }
    .profile-avatar { width: 90px; height: 90px; background: white; color: #2563eb; border-radius: 22px; display: flex; align-items: center; justify-content: center; font-size: 2.8rem; font-weight: 900; border: 3px solid #eff6ff; box-shadow: 0 10px 15px -3px rgba(0,0,0,0.05); }
    .profile-info h3 { font-size: 1.8rem; margin-bottom: 8px; color: #0f172a; font-weight: 900; }

    .profile-details-grid { display: grid; grid-template-columns: 1fr 1fr; gap: 20px; margin-bottom: 40px; }
    .detail-item { display: flex; flex-direction: column; gap: 6px; }
    .detail-item label { font-size: 0.75rem; font-weight: 800; color: #94a3b8; text-transform: uppercase; letter-spacing: 0.05em; }
    .detail-item span { color: #334155; font-weight: 700; font-size: 1.1rem; }
    .status-active { color: #059669 !important; display: flex; align-items: center; gap: 6px; font-size: 1rem !important; }

