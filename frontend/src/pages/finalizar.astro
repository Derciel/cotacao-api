    background: linear-gradient(135deg, #10b981, #059669); 
    color: white; width: 60px; height: 60px; line-height: 60px; 
    border-radius: 50%; margin: 0 auto 15px; font-size: 28px;
    box-shadow: 0 10px 15px -3px rgba(16, 185, 129, 0.3);
  }
  .success-banner h1 { color: var(--primary); margin: 0; font-size: 2rem; font-weight: 800; }
  
  .grid-layout { display: grid; grid-template-columns: 1fr 1.2fr; gap: 30px; }

