  .result-card, .history-card { padding: 0 !important; overflow: hidden; }
  .card-header { background: var(--primary); color: white; padding: 15px 25px; font-weight: 700; font-size: 0.9rem; text-transform: uppercase; letter-spacing: 1px; }
  .card-content { padding: 30px; }

  .info-row { display: flex; justify-content: space-between; margin-bottom: 15px; font-size: 0.95rem; }
  .info-row span { color: var(--text-light); }
  hr { border: 0; border-top: 1px dashed var(--border); margin: 25px 0; }

